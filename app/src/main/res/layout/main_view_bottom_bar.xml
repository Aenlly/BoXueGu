<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <RelativeLayout
        android:id="@+id/bottom_bar_course_btn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center_horizontal"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bottom_bar_image_course"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/main_course_icon"/>
        <TextView
            android:id="@+id/bottom_bar_text_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:layout_alignParentBottom="true"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar_exerises_btn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center_horizontal"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bottom_bar_image_exerise"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/main_exercises_icon"/>
        <TextView
            android:id="@+id/bottom_bar_text_exerises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="习题"
            android:layout_alignParentBottom="true"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar_myinfo_btn"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center_horizontal"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bottom_bar_image_myinfo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/main_course_icon"/>
        <TextView
            android:id="@+id/bottom_bar_text_myinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  我"
            android:layout_alignParentBottom="true"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
