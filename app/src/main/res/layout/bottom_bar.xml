<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/bottom_bar_course"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_course_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="课程"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_below="@id/bottom_bar_course"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/bottom_bar_exercises"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_exercises_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="课题"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_below="@id/bottom_bar_exercises"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/bottom_bar_my"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_my_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="我"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_below="@id/bottom_bar_my"/>

    </RelativeLayout>
</RelativeLayout>